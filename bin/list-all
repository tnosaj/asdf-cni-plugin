#!/usr/bin/env bash
set -euo pipefail

REPO_URL="https://github.com/containernetworking/plugins.git"

# List tags like v1.8.0, strip `refs/tags/` and leading `v`,
# then sort them semver-ish and output as space-separated list.
git ls-remote --tags --refs "$REPO_URL" 'v*' \
  | awk '{print $2}' \
  | sed 's#refs/tags/v##' \
  | sort -t. -k1,1n -k2,2n -k3,3n \
  | tr '\n' ' ' | sed 's/ $//'

